#include <stdio.h>
#include <windows.h>
#include <stdlib.h>
#include <conio.h>

struct sensors{
    int s1;
    int s2;
    int s3;
};
struct motors{
    int m1;
    int m2;
};

typedef struct sensors ss;

struct sensors LeSensores();
struct motors IA(struct sensors sss);
void Motor(struct sensors ssss, struct motors mmm);


int main(){

    while (1){
        Motor(LeSensores(), IA(LeSensores()));
    }

    return 0;
}


struct sensors LeSensores(){
    int ss1, ss2, ss3;
    struct sensors leituras;
    char ch;
    if(kbhit()){
        ch=getch();

        if(ch == 'd'){
            ss1=0;
            ss2=0;
            ss3=1;
        }
        else if(ch == 'c'){
            ss1=0;
            ss2=1;
            ss3=0;
        }
        else if(ch == 'e'){
            ss1=0;
            ss2=1;
            ss3=1;
        }
        else if(ch == 'a'){
            ss1=1;
            ss2=0;
            ss3=0;
        }
        else if(ch == 'w'){
            ss1=1;
            ss2=0;
            ss3=1;
        }
        else if(ch == 'q'){
            ss1=1;
            ss2=1;
            ss3=0;
        }
        else if(ch == 'z'){
            ss1=1;
            ss2=1;
            ss3=1;
        }
        else{
            ss1=0;
            ss2=0;
            ss3=0;
        }
    }
    else{
            ss1=0;
            ss2=0;
            ss3=0;
    }
    leituras.s1 = ss1;
    leituras.s2 = ss2;
    leituras.s3 = ss3;

    return leituras;
}


struct motors IA(struct sensors sss){

    int mm1, mm2;
    struct motors mmotor;

    if(sss.s1==0 && sss.s2==0 && sss.s3==0){
        mm1=1;
        mm2=1;
    }
    else if(sss.s1==0 && sss.s2==0 && sss.s3==1){
        mm1=0;
        mm2=1;
    }
    else if(sss.s1==0 && sss.s2==1 && sss.s3==0){
        mm1=1;
        mm2=0;
        }
    else if(sss.s1==0 && sss.s2==1 && sss.s3==1){
        mm1=0;
        mm2=1;
    }
    else if(sss.s1==1 && sss.s2==0 && sss.s3==0){
        mm1=1;
        mm2=0;
    }
    else if(sss.s1==1 && sss.s2==0 && sss.s3==1){
        mm1=1;
        mm2=1;
    }
    else if(sss.s1==1 && sss.s2==1 && sss.s3==0){
        mm1=1;
        mm2=0;
    }
    else if(sss.s1==1 && sss.s2==1 && sss.s3==1){
        mm1=0;
        mm2=1;
    }
    mmotor.m1 = mm1;
    mmotor.m2 = mm2;

    return mmotor;
}


void Motor(struct sensors ssss, struct motors mmm){
    printf("\r s1=%d s2=%d s3=%d      m1=%d m2=%d",ssss.s1, ssss.s2, ssss.s3, mmm.m1, mmm.m2);
    Sleep(500);
}


/*     s1  s2  s3     m1  m2     m1  m2
   .   0   0   0      1   1
   d   0   0   1      0   1
   c   0   1   0      1   0  ||  0   1
   e   0   1   1      0   1
   a   1   0   0      1   0
   w   1   0   1      1   1
   q   1   1   0      1   0
   z   1   1   1      1   0  ||  0   1
*/
